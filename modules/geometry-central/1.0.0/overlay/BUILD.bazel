    name = "numerical",
    srcs = glob(
        ["src/numerical/**/*.cpp"],
    ),
    hdrs = glob(
        [
            "include/geometrycentral/numerical/**/*.h",
            "include/geometrycentral/numerical/**/*.ipp",
        ],
    ),
    defines = select({
        "@platforms//os:windows": [

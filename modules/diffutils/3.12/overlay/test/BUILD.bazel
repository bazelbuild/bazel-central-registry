load("@bazel_skylib//rules:write_file.bzl", "write_file")
load("@bazel_skylib//rules:diff_test.bzl", "diff_test")

write_file(
    name = "a",
    content = [
        "foobar"
    ],
    out = "a",
)

write_file(
    name = "b",
    content = [
        "moocow"
    ],
    out = "b",
)

write_file(
    name = "expected",
    content = [
        "1c1",
        "< foobar",
        "\\ No newline at end of file",
        "---",
        "> moocow",
        "\\ No newline at end of file",
        "",
    ],
    out = "expected",
)

genrule(
    name = "patch",
    srcs = [":a", ":b"],
    tools = ["//:diff"],
    cmd = "$(execpath //:diff) $(execpath :a) $(execpath :b) > $@ || true",
    outs = ["patch"],
)

diff_test(
    name = "test",
    file1 = ":expected",
    file2 = ":patch", 
)
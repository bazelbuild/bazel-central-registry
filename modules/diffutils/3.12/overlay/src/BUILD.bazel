        "diff3.c",
        "paths.h",
        "system.c",
        "system.h",
    ],
    deps = [
        ":ver",
        "//lib:diffutils",
    ],
    visibility = ["//:__pkg__"],
)

cc_library(
    name = "ver",
    srcs = [
        "version.c",
        "version.h",
    ],
    includes = [
        ".",
    ],
    deps = ["//lib:diffutils"],
)

write_file(
    name = "paths_h",
    out = "paths.h",
    content = [
        "#define DEFAULT_DIFF_PROGRAM \"diff\"",
        "#define LOCALEDIR \"/usr/local/share/locale\""
    ]
)

write_file(
    name = "version_h",
    out = "version.h",
    content = [
        "extern char const *Version;"
    ]
)

write_file(
    name = "version_c",
    out = "version.c",
    content = [
        "#include <config.h>",
        "#include <version.h>",
        "char const *Version = \"{}\";".format(PACKAGE_VERSION)
    ]
)

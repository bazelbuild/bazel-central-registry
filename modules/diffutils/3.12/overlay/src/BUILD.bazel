    visibility = ["//:__pkg__"],
)

cc_binary(
    name = "cmp",
    srcs = [
        "cmp.c",
        "paths.h",
        "system.c",
        "system.h",
    ],
    deps = [
        ":ver",
        "//lib:diffutils",
    ],
    visibility = ["//:__pkg__"],
)

cc_binary(
    name = "sdiff",
    srcs = [
        "paths.h",
        "sdiff.c",
        "system.c",
        "system.h",

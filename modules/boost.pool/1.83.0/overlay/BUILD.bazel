load("@rules_cc//cc:defs.bzl", "cc_library")

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "boost.pool",
    hdrs = glob(
        [
            "include/**/*.hpp",
            "include/**/*.h",
            "include/**/*.ipp",
        ],
        exclude = glob([
            "include/boost/pool/detail/**/*.hpp",
            "include/boost/pool/detail/**/*.ipp",
        ]),
    ),
    includes = ["include"],
    features = [
        "parse_headers",
    ],
    textual_hdrs = glob([
        "include/boost/pool/detail/**/*.hpp",
        "include/boost/pool/detail/**/*.ipp",
    ]),
    deps = [
        "@boost.assert",
        "@boost.config",
        "@boost.integer",
        "@boost.throw_exception",
        "@boost.type_traits",
        "@boost.winapi",
    ],
)

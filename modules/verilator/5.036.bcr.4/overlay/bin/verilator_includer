#!/usr/bin/env python3
# Simple replacement for verilator_includer script
# Combines multiple C++ files into one by adding #include directives

import sys
import argparse

parser = argparse.ArgumentParser()
parser.add_argument('-DVL_INCLUDE_OPT', dest='include_opt', default='include')
parser.add_argument('files', nargs='+')
args = parser.parse_args()

for filename in args.files:
    print(f'#{args.include_opt} "{filename}"')

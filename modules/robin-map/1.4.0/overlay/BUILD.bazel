    name = "msvc_compiler",
    flag_values = {"@bazel_tools//tools/cpp:compiler": "msvc-cl"},
)

cc_library(
    name = "robin-map",
    hdrs = glob(["include/tsl/*.h"]),
    copts = select({
        ":msvc_compiler": ["/std:c++17"],
        "//conditions:default": ["--std=c++17"],

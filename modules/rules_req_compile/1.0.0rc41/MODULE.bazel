)
dev_requirements.package_annotation(
    package = "sphinxcontrib-jsmath",
    deps = ["-sphinx"],
)
dev_requirements.package_annotation(
    package = "sphinxcontrib-qthelp",
    deps = ["-sphinx"],
)
dev_requirements.package_annotation(
    deps_excludes = ["sphinx"],

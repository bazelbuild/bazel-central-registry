load("@rules_cc//cc:cc_library.bzl", "cc_library")

label_flag(
    name = "blas",
    build_setting_default = ":native",
    visibility = ["//visibility:public"],
)

cc_library(
    name = "native",
    linkopts = select(
        {
            "@platforms//os:linux": [
                "-lblas",
            ],
            "@platforms//os:osx": [
                "-framework Accelerate",
            ],
        },
        no_match_error = "No native BLAS is available on this platform",
    ),
)

# Rules_Moonbit MODULE.bazel

module(name = "rules_moonbit", version = "0.1.0-rc1")

bazel_dep(name = "bazel_skylib", version = "1.5.0")

# Register MoonBit toolchain for automatic toolchain resolution
moonbit_toolchain = use_extension(
    "//moonbit:extensions.bzl",
    "moonbit_toolchain_extension",
)
use_repo(moonbit_toolchain, "moonbit_toolchain")

# Register the MoonBit toolchain for Bazel toolchain resolution
register_toolchains("@moonbit_toolchain//:moonbit_toolchain")



--- /dev/null
+++ BUILD.bazel
@@ -0,0 +1,99 @@
+""" Builds libhubbub.
+"""
+
+_LIBHUBBUB_PUB_HEADERS = [
+    "include/hubbub/hubbub.h",
+    "include/hubbub/parser.h",
+    "include/hubbub/errors.h",
+    "include/hubbub/functypes.h",
+    "include/hubbub/types.h",
+    "include/hubbub/tree.h",
+]
+
+genrule(
+    name = "gen_entities_inc",
+    srcs = ["build/Entities"],
+    outs = ["src/tokeniser/entities.inc"],
+    tools = ["build/make-entities.pl"],
+    cmd = "$(PERL) $(location build/make-entities.pl) $(location build/Entities) $@",
+    toolchains = [
+        "@rules_perl//:current_toolchain",
+    ],
+    visibility = ["//visibility:private"],
+)
+
+genrule(
+    name = "gen_autogenerated_element_type_inc",
+    srcs = ["src/treebuilder/element-type.gperf"],
+    outs = ["src/treebuilder/autogenerated-element-type.inc"],
+    tools = ["@gperf//:gperf"],
+    cmd = "$(location @gperf//:gperf) --output-file=$@ $(location src/treebuilder/element-type.gperf)",
+    visibility = ["//visibility:private"],
+)
+
+cc_library(
+    name = "hubbub_local_includes",
+    srcs = [
+        "src/parser.c",
+        "src/charset/detect.h",
+        "src/tokeniser/tokeniser.h",
+        "src/treebuilder/treebuilder.h",
+        "src/utils/parserutilserror.h",
+        "src/treebuilder/treebuilder.c",
+        "src/treebuilder/initial.c",
+        "src/treebuilder/before_html.c",
+        "src/treebuilder/before_head.c",
+        "src/treebuilder/in_head.c",
+        "src/treebuilder/in_head_noscript.c",
+        "src/treebuilder/after_head.c",
+        "src/treebuilder/in_body.c",
+        "src/treebuilder/in_table.c",
+        "src/treebuilder/in_column_group.c",
+        "src/treebuilder/in_caption.c",
+        "src/treebuilder/in_table_body.c",
+        "src/treebuilder/in_row.c",
+        "src/treebuilder/in_cell.c",
+        "src/treebuilder/in_select.c",
+        "src/treebuilder/in_select_in_table.c",
+        "src/treebuilder/in_foreign_content.c",
+        "src/treebuilder/after_body.c",
+        "src/treebuilder/in_frameset.c",
+        "src/treebuilder/after_frameset.c",
+        "src/treebuilder/after_after_body.c",
+        "src/treebuilder/after_after_frameset.c",
+        "src/treebuilder/generic_rcdata.c",
+        "src/treebuilder/modes.h",
+        "src/treebuilder/internal.h",
+        "src/treebuilder/element-type.h",
+        "src/treebuilder/autogenerated-element-type.inc",
+        "src/treebuilder/element-type.c",
+        "src/tokeniser/entities.c",
+        "src/tokeniser/tokeniser.c",
+        "src/tokeniser/entities.h",
+        "src/tokeniser/entities.inc",
+        "src/charset/detect.c",
+        "src/utils/utils.h",
+        "src/utils/string.h",
+        "src/utils/errors.c",
+        "src/utils/string.c",
+    ],
+    hdrs = _LIBHUBBUB_PUB_HEADERS,
+    includes = ["src", "src/tokeniser", "include"],
+    copts = ["-w"],
+    deps = ["@libparserutils"],
+    visibility = ["//visibility:private"],
+)
+
+cc_library(
+    name = "hubbub",
+    implementation_deps = ["hubbub_local_includes"],
+    hdrs = _LIBHUBBUB_PUB_HEADERS,
+    includes = ["include"],
+    visibility = ["//visibility:public"],
+)
+
+alias(
+    name = "libhubbub",
+    actual = ":hubbub",
+    visibility = ["//visibility:public"],
+)

load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "unwind",
    hdrs = glob(["include/**/*.h"]),
    features = [
        "parse_headers",
    ],
    includes = ["include"],
    srcs = glob([
        "src/**/*.c",
        "src/**/*.h",
    ]),
    visibility = ["//visibility:private"],
)

alias(
    name = "libunwind",
    actual = ":unwind",
    visibility = ["//visibility:public"],
)

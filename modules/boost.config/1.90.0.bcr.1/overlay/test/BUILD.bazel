load("@rules_cc//cc:cc_test.bzl", "cc_test")

cc_test(
    name = "config_test",
    srcs = [
        "config_test.cpp",
        "test.hpp",
    ] + glob(["*.ipp"]),
    copts = select({
        # The BOOST_HAS_NRVO test checks runtime copy counts and is sensitive to
        # non-optimized MSVC builds on Windows.
        "@platforms//os:windows": [
            "/O2",
            "/Zc:nrvo",
        ],
        "//conditions:default": [],
    }),
    deps = [
        "@boost.config",
        "@onetbb//:tbb",
    ],
)
